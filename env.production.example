# PRISM 本番環境変数
PRISM_ENV=production

# API設定
API_KEY=${API_KEY}
OPENAI_API_KEY=${OPENAI_API_KEY}
MCP_BASE_URL=http://PRISM-MCP:8062

# セキュリティ設定
CORS_ORIGINS=${CORS_ORIGINS:-https://yourdomain.com}
JWT_SECRET_KEY=${JWT_SECRET_KEY}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# ログ設定
LOG_LEVEL=INFO
LOG_HUMAN=0
LOG_FILE=logs/prism.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10

# キャッシュ設定
REDIS_URL=redis://:${REDIS_PASSWORD}@PRISM-Redis:6379/0
CACHE_TTL=3600
CACHE_ENABLED=true

# Notion設定
NOTION_API_KEY=${NOTION_API_KEY}
NOTION_TASK_DB_ID=${NOTION_TASK_DB_ID}
NOTION_TODO_DB_ID=${NOTION_TODO_DB_ID}
NOTION_KNOWLEDGE_DB_ID=${NOTION_KNOWLEDGE_DB_ID}
NOTION_NOTE_DB_ID=${NOTION_NOTE_DB_ID}
NOTION_INBOX_DB_ID=${NOTION_INBOX_DB_ID}

# Google Calendar設定
GOOGLE_CALENDAR_ENABLED=${GOOGLE_CALENDAR_ENABLED:-false}
GOOGLE_CALENDAR_SYNC_INTERVAL=${GOOGLE_CALENDAR_SYNC_INTERVAL:-300}
GOOGLE_CALENDAR_ID=${GOOGLE_CALENDAR_ID:-primary}

# 自動化設定
WORKER_INTERVAL=${WORKER_INTERVAL:-60}
AUTO_CLASSIFY_ENABLED=${AUTO_CLASSIFY_ENABLED:-true}
AUTO_CLASSIFY_INTERVAL=${AUTO_CLASSIFY_INTERVAL:-120}

# メール設定
REPORT_EMAIL_ENABLED=${REPORT_EMAIL_ENABLED:-true}
REPORT_EMAIL_SMTP_HOST=${REPORT_EMAIL_SMTP_HOST}
REPORT_EMAIL_SMTP_PORT=${REPORT_EMAIL_SMTP_PORT:-587}
REPORT_EMAIL_SMTP_USER=${REPORT_EMAIL_SMTP_USER}
REPORT_EMAIL_SMTP_PASSWORD=${REPORT_EMAIL_SMTP_PASSWORD}
REPORT_EMAIL_FROM=${REPORT_EMAIL_FROM}
REPORT_EMAIL_TO=${REPORT_EMAIL_TO}

# 監視設定
GRAFANA_PASSWORD=${GRAFANA_PASSWORD:-admin123}
REDIS_PASSWORD=${REDIS_PASSWORD:-defaultpassword}

# パフォーマンス設定
MAX_CONCURRENT_REQUESTS=${MAX_CONCURRENT_REQUESTS:-50}
MAX_REQUEST_SIZE=${MAX_REQUEST_SIZE:-10485760}
